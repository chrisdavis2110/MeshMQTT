[Unit]
Description=MeshCore MQTT Subscriber Service
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=YOUR_USERNAME
WorkingDirectory=/path/to/meshcore/mqtt
ExecStart=/path/to/meshcore/mqtt/venv/bin/python /path/to/meshcore/mqtt/mqtt_subscriber.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
